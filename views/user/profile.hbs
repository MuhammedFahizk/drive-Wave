<!-- Modal -->
<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle"> Edit {{data.name}} </h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form action="/editUser?editId={{data._id}}" method="post">
            <div class="form-group ">
               <span>Name</span>
                <input type="text" class="form-control" name="name" value="{{data.name}}" placeholder="{{data.name}}">
              </div>
              <div class="form-group">
                
                <span>Age</span><input type="text" class="form-control " name="age" value="{{data.age}}" placeholder="{{data.age}}">
              </div>
              <div class="form-group">
                 <span>Email</span>
                <input type="text" class="form-control" name="email" value="{{data.email}}" placeholder="{{data.email}}">
              </div>
              <div class="form-group">
                 <span>Phone</span>
                <input type="text" class="form-control"name="phone" value="{{data.phone}}" placeholder="{{data.phone}}">
              </div>
              <div class="form-group">
                 <span>Place</span>
                <input type="text" class="form-control" name="place" value="{{address.place}}" placeholder="{{address.place}}">
              </div>
              <div class="form-group">
                 <span>Zip Code</span>
                <input type="text" class="form-control" name="zip" value="{{address.zip}}" placeholder="{{address.zip}}">
              </div>
              <div class="form-group">
                 <span>House Name</span>
                <input type="text" class="form-control" name="houseName" value="{{address.houseName}}"  placeholder=" {{address.houseName}}">
              </div>
              <div class="form-group">
                 <span>License Number</span>
                <input type="text" class="form-control" name="licenseNumber" value="{{data.licenseNumber}}" placeholder="{{data.licenseNumber}}">
              </div>
