            category.push($(this).val());
        } else {
            // If unchecked, remove its value from the transmission array
            const index = category.indexOf($(this).val());
            if (index !== -1) {
                category.splice(index, 1);

            }
        }
        
        
                $('.container .rowcars').empty();
            submit()})
    
