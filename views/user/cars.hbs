});

 function searcCar () {
  axios.post('/searchCar',{ searchText }) 
  .then(response => { 
     const cars = response.data;

                    if (cars.length === 0) {
                        // Handle case where no cars match the criteria
                    } else {
                        cars.forEach(car => {
                            const carHtml = `
                                <div class="col-md-4">
                                    <div class="car-wrap rounded ">
