                           </div>

						    
						  </div>
						</div>
		      </div>
				</div>
                             
                       

                      </div>
                      
                      
                    
                      <div  id="paymentDiv"  class="car-wrap rounded ftco-animate ">
                
                
                      </div>
                      
                    

                     
                  

                    
                    
        </div>
        </div>
      </div>
    </section>
</body>

<script>
    const conformDiv=document.getElementById('conformDiv')
    const detailsDiv=document.getElementById('detailsDiv')
    const paymentDiv=document.getElementById('paymentDiv')

    const details = document.getElementById('details')
    const payment=document.getElementById('payment')
    const conform=document.getElementById('conform')


    


    details.addEventListener('click', function(){
        conformDiv.style.display = 'none';
        paymentDiv.style.display = 'none';
        detailsDiv.style.display = 'block';


    })
    payment.addEventListener('click', function(){
        conformDiv.style.display = 'none';
        paymentDiv.style.display = 'block';
        detailsDiv.style.display = 'none';    })
    conform.addEventListener('click', function(){
        conformDiv.style.display = 'block';
        paymentDiv.style.display = 'none';
        detailsDiv.style.display = 'none';    })
    

</script>
