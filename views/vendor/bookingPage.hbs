<script>
	document.querySelectorAll('.status-select').forEach(function (select) {
		updateStatusOptions(select);

		select.addEventListener('change', function (event) {
			const bookingId = select.previousElementSibling.value; // Get booking ID from hidden input
			const newStatus = event.target.value;

			// Make Axios request to update status
			axios.put('/vendor/changeStatus', {
				bookingId: bookingId,
				newStatus: newStatus
			})
				.then(function (response) {
					// Handle success
					console.log('Status updated successfully:', response.data);

				})
				.catch(function (error) {
					// Handle error
					console.error('Error updating status:', error);
				});
		});

	});

	// Function to update the options of the dropdown select based on status
	function updateStatusOptions(select) {
		var bookingStatus = select.dataset.status;
		select.innerHTML = ""; // Clear existing options

		if (bookingStatus === "Confirmed") {
			select.add(new Option("Confirmed", "Confirmed"));
			select.add(new Option("Cancel", "Cancel"));
		} else if (bookingStatus === "Not Picked") {
			select.add(new Option("Not Picked", "Not Picked"));
			select.add(new Option("In Progress", "In Progress"));
			select.add(new Option("Cancel", "Cancel"));
		} else if (bookingStatus === "In Progress") {
			select.add(new Option("In Progress", "In Progress"));
			select.add(new Option("Not Picked", "Not Picked"));
		} else if (bookingStatus === 'Pending') {
			select.add(new Option("Pending", "Pending"));
			select.add(new Option("Cancel", "Cancel"));
		} else if (bookingStatus === 'Overdue') {
			select.add(new Option("Overdue", "Overdue"));
			select.add(new Option("Completed", "Completed"));
		} else if (bookingStatus === 'Completed') {
			select.add(new Option("Completed", "Completed"));
			select.add(new Option("Overdue", "Overdue"));
		}
		else if (bookingStatus === 'Cancel') {
			select.add(new Option("Cancel", "Cancel"));
		}
	}


	flatpickr("#pick-up", {
		enableTime: true,
		dateFormat: "Y-m-d",

		disableMobile: "true",
		onChange: function (selectedDates, dateStr, instance) {
			// Update the minDate of the drop-off date picker
			flatpickr("#drop-off").set("minDate", dateStr);
		}
	});

	flatpickr("#drop-off", {
		enableTime: true,
		dateFormat: "Y-m-d",
		minTime: "08:00",
		maxTime: "22:00",
		disableMobile: "true"

	});

	document.querySelectorAll('.car-status').forEach(carStatus => {
		carStatus.addEventListener('click', (e) => {
			e.preventDefault();
			const id = carStatus.parentElement.querySelector('.booking-id').value;
			axios.post('/vendor/changCarStatus', {
				id
			}).then(res => {
				window.location.reload()
				// Handle success if needed
			}).catch(error => {
				console.log(error)

			});
		});
	});
</script>